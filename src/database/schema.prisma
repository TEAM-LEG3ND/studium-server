generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Study {
  id               Int         @id @default(autoincrement())
  leaderId         Int
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  intro            String
  rules            String[]
  status           StudyStatus @default(RECRUITING)
  endDate          DateTime
  recruitEndDate   DateTime
  recruitStartDate DateTime
  startDate        DateTime
  name             String
  recruited        Int
  locationDetail   String
  templateContent  String
  total            Int
  location         Location
  viewCount        Int         @default(0)
  applyForms       ApplyForm[]
  Bookmark         Bookmark[]
  member           Member[]
  notices          Notice[]
  questions        Question[]
  leader           User        @relation(fields: [leaderId], references: [id])
  tags             Tag[]       @relation("StudyToTag")
}

model User {
  id                 Int         @id @default(autoincrement())
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  universalAccountId String      @unique
  manners            Int
  intro              String
  profileURL         String
  nickname           String      @unique
  applyForms         ApplyForm[]
  Bookmark           Bookmark[]
  membersOf          Member[]
  studyJoined        Study[]
  journals           Journal[]
}

model Member {
  id      Int          @id @default(autoincrement())
  studyId Int
  userId  Int
  status  MemberStatus @default(PENDING)
  type    MemberType   @default(MEMBER)
  study   Study        @relation(fields: [studyId], references: [id])
  user    User         @relation(fields: [userId], references: [id])
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  studys Study[] @relation("StudyToTag")
}

model ApplyForm {
  id         Int         @id @default(autoincrement())
  userId     Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  studyId    Int
  answers    Answer[]
  study      Study       @relation(fields: [studyId], references: [id])
  user       User        @relation(fields: [userId], references: [id])
  timeFrames TimeFrame[]
}

model Question {
  id      Int      @id @default(autoincrement())
  text    String
  studyId Int
  Answer  Answer[]
  study   Study    @relation(fields: [studyId], references: [id])
}

model Answer {
  id          Int       @id @default(autoincrement())
  text        String
  questionId  Int
  applyFormId Int
  applyForm   ApplyForm @relation(fields: [applyFormId], references: [id])
  question    Question  @relation(fields: [questionId], references: [id])
}

model TimeFrame {
  id          Int       @id @default(autoincrement())
  start       DateTime
  end         DateTime
  applyFormId Int
  applyForm   ApplyForm @relation(fields: [applyFormId], references: [id])
}

model Notice {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  studyId   Int
  study     Study    @relation(fields: [studyId], references: [id])
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    Int
  studyId   Int
  Study     Study    @relation(fields: [studyId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

model Journal {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}

enum StudyStatus {
  INACTIVE
  RECRUITING
  ACTIVE
  EVALUATION
}

enum MemberStatus {
  PENDING
  ACTIVE
  COMPLETE
}

enum MemberType {
  LEADER
  MEMBER
}

enum Location {
  ONLINE
  OFFLINE
}
